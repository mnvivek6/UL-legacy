<title>UL</title>
  <div class="container">
    <header>
      <nav class="navbar-sign">
        <img src="/img/WhatsApp Image 2023-03-08 at 12.07.14.jpg" alt="" class="UL-img"/>
    </nav>
    </header>
    <div class="row">
    <h1>Signup Form</h1>
        
    <form class="total-form" method="post" action="/signup">
      <div class="signup-form">
        <input type="text" placeholder="Enter Name" name="name" class="sig-input" >
        <input type="text" placeholder="Enter Mobile no." name="mobile" class="sig-input" >
      </div>
      <div class="signup-form">
        <input type="email" name="email" class="sig-input" placeholder="Enter Email" >
        <!-- <input type="password" placeholder="confirm password" name="password" class="sig-input"> -->
      </div>

      <div class="signup-form">
      <input type="password" name="password" class="sig-input" placeholder="Enter a strong password">
      <!-- <input type="password" placeholder="confirm password" name="password" class="sig-input"> -->
    </div>

      <button type="submit">Log in</button>
      <%
  if(typeof message !== 'undefined'){
    %>
    <p style="color:green;"> <%= message %></p>
    <%
  }
  
  %>
    </form>
  </div>
  </div>

 
  

