                        <div class="common-block">

                            <div class="inner-title">
                                <h4 class="mb-0">My Orders</h4>
                            </div>
                      
                        
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Products</th>
                                        
                                       
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orderData.length == 0) { %>
                                        <h3>no orders</h3>
                                    <% } else { %>
                                        <% for (let i = orderData.length - 1; i >= 0; i--) { %>
                                            <tr>
                                               
                                                <td>
                                                    <% orderData[i].items.forEach((element, index) => { %>
                                                        <% if (element.productId && element.productId.productname) { %>
                                                            <p><%= element.productId.productname %>,</p>
                                                        <% } %>
                                                    <% }) %>
                                                    
                                                </td>
                                                <td>
                                                    <p><%= orderData[i].address.fullName %><br><%= orderData[i].address.mobileNumber %><br><%= orderData[i].address.pincode %><br>
                                                    <%= orderData[i].address.houseAddress %><br><%= orderData[i].address.streetAddress %><%= orderData[i].address.landMark %>,<%= orderData[i].address.cityName %>,<%= orderData[i].address.state %>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p><%= orderData[i].totalAmount %></p>
                                                </td>
                                                <td>
                                                    <p><%= orderData[i].orderStatus %></p>
                                                </td>
                                                <td class="quantity-col">
                                                    <div class="">
                                                        <% if (orderData[i].orderStatus=='delivered') {%>
                                                        <a href="/returnOrder?id=<%= orderData[i]._id %> " class="btn_3">
                                                            <button type="button" class="btn btn-dark">Return Order</button>
                                                        </a>
                                                        <% }else if (orderData[i].orderStatus=='placed') {%>
                                                            <a href="/cancelorder?id=<%= orderData[i]._id %> " class="btn_3">
                                                                <button type="button" class="btn btn-dark">Cancel Order</button>
                                                            </a>
                                                       <% }else if (orderData[i].orderStatus=='shipped') {%>
                                                         <a href="/cancelorder?id=<%= orderData[i]._id %> " class="btn_3">
                                                                <button type="button" class="btn btn-dark">Cancel Order</button>
                                                            </a>
                                                    |<%  } else if (orderData[i].orderStatus=='return requested'){%>
                                                        <a href="" class="btn_3">
                                                            <button type="button" class="btn btn-dark">Please Wait</button>
                                                        </a>
                                                   <% }else if(orderData[i].orderStatus=='cancelled'){%>
                                                    <a href="" class="btn_3">
                                                        <button type="button" class="btn btn-dark">Order Cancelled</button>
                                                    </a>
                                                  <% }%>
                                                    </div><!-- End .cart-product-quantity -->
                                                </td>
                                               <td>
                                                <a href="/downloadinvoice?id=<%=orderData[i]._id %>" class="btn_3">
                                                    <button type="button" class="btn btn-dark">View Order</button>
                                                </a>
                                               </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                            </table>
                        </div>
                        <a class="butn-style2 mt-3" href="#"><span>Show All Orders</span></a>
                        </div>

